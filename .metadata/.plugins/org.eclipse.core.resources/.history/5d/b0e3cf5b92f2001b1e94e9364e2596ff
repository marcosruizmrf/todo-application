package com.marcos.todo.services;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Arrays;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.marcos.todo.domain.Todo;
import com.marcos.todo.repositories.TodoRepository;

@Service
public class DBService {

	@Autowired
	private TodoRepository todoRepository;

	public void instanciaBaseDeDados() throws ParseException {
		
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");


		Todo t1 = new Todo(null, "Estudar", "Estudar Spring", sdf.parse("22/03/2022"), true);
		Todo t2 = new Todo(null, "Ler", "Ler para aprender", sdf.parse("23/03/2022"), true);
		Todo t3 = new Todo(null, "Praticar", "Praticar para fixar", sdf.parse("24/03/2022"), false);
		Todo t4 = new Todo(null, "Descansar", "Descansar para n√£o esquecer", sdf.parse("25/03/2022"), false);

		todoRepository.saveAll(Arrays.asList(t1,t2,t3,t4));

	}

}
